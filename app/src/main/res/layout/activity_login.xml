<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background_color">

    <!-- WebView 추가 -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dou"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_kakao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/promptbold"
            android:includeFontPadding="false"
            android:text="DOU"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sub_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardextrabold"
            android:text="AI 음성인식을 이용한"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/sub_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardextrabold"
            android:text="심리 치료 도우미"
            android:textAlignment="center"
            android:textColor="#1FFF1B"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_title1" />

        <View
            android:layout_width="325dp"
            android:layout_height="144dp"
            android:background="@drawable/back_img"
            app:layout_constraintTop_toBottomOf="@id/home_dou"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-90dp"/>

        <View
            android:id="@+id/home_dou"
            android:layout_width="85dp"
            android:layout_height="93dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/home_dou"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_title2" />
        

        

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <View
        android:id="@+id/btn_kakao"
        android:layout_marginBottom="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_15_btn"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        />

    <View
        android:id="@+id/ic_kakao"
        app:layout_constraintTop_toTopOf="@id/btn_kakao"
        app:layout_constraintBottom_toBottomOf="@id/btn_kakao"
        app:layout_constraintStart_toStartOf="@+id/btn_kakao"
        android:background="@drawable/ic_kakao"
        android:layout_marginLeft="25dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        />

    <TextView
        android:id="@+id/tv_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:text="카카오톡 로그인"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_kakao"
        app:layout_constraintEnd_toEndOf="@+id/btn_kakao"
        app:layout_constraintStart_toStartOf="@+id/btn_kakao"
        app:layout_constraintTop_toTopOf="@id/btn_kakao" />


</androidx.constraintlayout.widget.ConstraintLayout>